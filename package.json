{
  "name": "chunklands",
  "version": "1.0.0",
  "description": "3D Game in NodeJS/OpenGL",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --watch src --ext h,cc --exec \"npm run dev:build\"",
    "dev:build": "cross-env CMAKE_BUILD_PARALLEL_LEVEL=8 cmake-js build --debug",
    "clean": "cmake-js clean",
    "test": "tap src/**/*.test.js",
    "pretest": "npm run dev:build",
    "play": "node src/app.js",
    "preplay": "cross-env CMAKE_BUILD_PARALLEL_LEVEL=8 cmake-js build"
  },
  "keywords": [
    "game",
    "c++",
    "opengl",
    "nodejs",
    "napi",
    "node-addon-api",
    "boost"
  ],
  "license": "MIT",
  "dependencies": {
    "image-size": "^0.8.3",
    "jimp": "^0.9.3",
    "piscina": "^1.2.0"
  },
  "devDependencies": {
    "bindings": "^1.5.0",
    "cmake-js": "^6.1.0",
    "concurrently": "^4.1.2",
    "cross-env": "^7.0.2",
    "node-addon-api": "^2.0.0",
    "nodemon": "^2.0.3",
    "sinon": "^9.0.2",
    "tap": "^14.10.7"
  }
}
