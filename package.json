{
  "name": "chunklands",
  "version": "0.1.0",
  "description": "3D Game in NodeJS/OpenGL",
  "scripts": {
    "start": "node build",
    "dev": "concurrently npm:cxx:watch npm:ts:watch",
    "cxx:watch": "nodemon --watch src --ext hxx,cxx,inl --exec \"make\"",
    "ts:watch": "tsc -w --preserveWatchOutput",
    "build": "concurrently npm:cxx:build npm:ts:build",
    "cxx:build": "make",
    "ts:build": "tsc",
    "play": "node build",
    "preplay": "concurrently -n cxx:build,ts:build \"cross-env NODE_ENV=production make\" npm:ts:build",
    "test": "tap src/**/*.test.ts",
    "test:watch": "nodemon --watch src --ext ts --exec \"npm test\"",
    "postinstall": "husky install",
    "format": "concurrently npm:format:cxx npm:format:ts",
    "format:cxx": "node .clang-format.cxx.js",
    "format:ts": "prettier --write src",
    "prettier:check": "prettier --check src",
    "lint": "eslint src --ext .ts",
    "git:precommit": "concurrently npm:lint",
    "pregit:precommit": "concurrently npm:format",
    "git:prepush": "concurrently npm:prettier:check"
  },
  "keywords": [
    "game",
    "c++",
    "opengl",
    "nodejs",
    "napi",
    "node-addon-api",
    "boost"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/node": "^14.14.6",
    "@types/sinon": "^9.0.8",
    "@types/tap": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "execa": "^4.0.3",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "node-addon-api": "^3.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sinon": "^9.0.3",
    "tap": "^14.10.8",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run git:precommit && git add -A",
      "pre-push": "npm run git:prepush"
    }
  }
}
